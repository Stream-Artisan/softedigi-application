<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
  </head>
  <body class="transition-colors duration-300">
    <nav
      class="bg-transparent py-4 px-6 flex justify-between items-center shadow-lg"
    >
      <div class="logo">
        <a href="/">
          <img
            class="h-12 transition-transform duration-300 hover:scale-105"
            src="\images\llogo.png"
            alt="Logo"
          />
        </a>
      </div>
      <div class="hidden md:flex items-center space-x-6">
        <ul class="flex space-x-6">
          <li>
            <a
              href="/"
              class="text-white hover:text-blue-400 transition-colors duration-200"
              >Home</a
            >
          </li>
          <li>
            <a
              href="/about"
              class="text-white hover:text-blue-400 transition-colors duration-200"
              >About</a
            >
          </li>
          <li>
            <a
              href="/blog"
              class="text-white hover:text-blue-400 transition-colors duration-200"
              >Blogs</a
            >
          </li>
          <li>
            <a
              href="/services"
              class="text-white hover:text-blue-400 transition-colors duration-200"
              >Services</a
            >
          </li>
          <li>
            <a
              href="/contact"
              class="text-white hover:text-blue-400 transition-colors duration-200"
              >Contact</a
            >
          </li>
        </ul>
        <div class="flex items-center space-x-2">
          <a
            href="/get-started"
            class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors duration-200"
            >Get Started</a
          >
        </div>
      </div>
      <button
        id="menu-toggler"
        class="md:hidden p-2 rounded-md hover:bg-gray-700 transition-colors duration-200"
      >
        <i class="bi bi-list text-2xl text-white"></i>
      </button>
    </nav>
    <div
      id="mobile-menu"
      class="hidden bg-gray-900 flex flex-col items-center space-y-4 py-4"
    >
      <a
        href="/"
        class="text-white hover:text-blue-400 transition-colors duration-200"
        >Home</a
      >
      <a
        href="/about"
        class="text-white hover:text-blue-400 transition-colors duration-200"
        >About</a
      >
      <a
        href="/services"
        class="text-white hover:text-blue-400 transition-colors duration-200"
        >Services</a
      >
      <a
        href="/contact"
        class="text-white hover:text-blue-400 transition-colors duration-200"
        >Contact</a
      >
      <a
        href="/get-started"
        class="bg-gradient-to-r from-black to-blue-600 text-white px-4 py-2 rounded-md hover:bg-gradient-to-r hover:from-gray-900 hover:to-blue-700 transition-colors duration-200 w-full text-center"
        >Get Started</a
      >
    </div>

    <script>
      // Hamburger menu toggle
      const menuToggler = document.getElementById("menu-toggler");
      const menuTogglerIcon = menuToggler.querySelector("i");
      const mobileMenu = document.getElementById("mobile-menu");
      menuToggler.addEventListener("click", function () {
        const isOpen = !mobileMenu.classList.contains("hidden");
        mobileMenu.classList.toggle("hidden");
        menuTogglerIcon.classList.toggle("bi-list", isOpen);
        menuTogglerIcon.classList.toggle("bi-x", !isOpen);
      });

      // Ensure mobile menu is hidden on resize to desktop
      window.addEventListener("resize", function () {
        if (window.innerWidth >= 768) {
          mobileMenu.classList.add("hidden");
          menuTogglerIcon.classList.remove("bi-x");
          menuTogglerIcon.classList.add("bi-list");
        }
      });

      // Initial check for mobile view
      (function () {
        if (window.innerWidth < 768) {
          mobileMenu.classList.add("hidden");
          menuTogglerIcon.classList.remove("bi-x");
          menuTogglerIcon.classList.add("bi-list");
        }
      })();
    </script>

    <style>
      body.dark {
        background-color: transparent;
        color: #e2e8f0;
      }
      nav {
        background-color: #1a202c !important;
        width: 90%;
      }

      #mobile-menu {
        background-color: #1a202c !important;
      }
      body.dark .bg-gray-800,
      body.dark nav,
      body.dark #mobile-menu {
        background-color: #1a202c !important;
      }
      body.dark .hover\:bg-gray-700:hover {
        background-color: #4a5568;
      }
      body.dark .bg-blue-600 {
        background-color: #2b6cb0;
      }
      body.dark .hover\:bg-blue-700:hover {
        background-color: #2c5282;
      }
      body.dark a {
        color: #e2e8f0 !important;
      }
      #mobile-menu {
        transition: all 0.3s ease-in-out;
      }
      #menu-toggler i {
        color: #fff !important;
      }
    </style>
  </body>
</html>
